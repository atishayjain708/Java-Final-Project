<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="garbagecollectors.com.snucabpool.activities.RequestActivity.SentRequestsFragment"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="View"
        android:textSize="@dimen/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/viewButtonSentRequests"
        android:textColor="#3E2723"
        android:background="@drawable/mybutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewButtonSentRequests"
        android:id="@+id/recycle_requests">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
